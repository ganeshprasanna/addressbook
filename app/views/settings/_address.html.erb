<%= error_messages_for 'address' %>

<% form_remote_tag :url => { :action => 'address' }, :complete => "hideSpinner();",
     :loading => "showSpinner();" do -%>

  <h3>Home Address</h3>
  <div class="section">
    <%= render :partial => 'shared/address_fields', :locals => { :address => address, :disable_address2 => true } %>
  </div>

  <p><%= submit_tag "Save" %></p>  
<% end -%>

<p>
  <%= link_to_remote("Cancel", :url => { :action => "address" }, :method => 'get',
        :complete => "hideSpinner();", :loading => "showSpinner();") %>
</p>
